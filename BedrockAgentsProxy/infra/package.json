{
  "name": "@smart-todo-app/infra",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "prebuild": "npm run build -w @smart-todo-app/api",
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "cdk deploy",
    "deploy:agent": "cdk deploy BedrockAgentTestStack",
    "update-env": "ts-node scripts/update-env.ts",
    "postdeploy": "npm run update-env",
    "clean": "rm -rf node_modules cdk.out"
  },
  "devDependencies": {
    "@types/node": "20.4.1",
    "aws-cdk": "^2.1007.0",
    "cdk-nag": "^2.35.62",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@aws/agents-for-amazon-bedrock-blueprints": "^1.0.0",
    "aws-cdk-lib": "^2.185.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}
